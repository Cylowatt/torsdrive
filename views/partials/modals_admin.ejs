<div id="modal-edit-user" class="modal">
  <div class="modal-content">
    <h4>Editing {{aVars.modifiedUser.parent.username}}</h4>
    <form id="form-edit-user" class="row mar-top modal-form" name="formUserEdit">
      <div class="row">
        <div class="col s6">
          <label for="formUserEditUsername">Username</label>
          <input id="formUserEditUsername" type="text" ng-model="aVars.modifiedUser.username" />
        </div>
        <div class="col s6">
          <label for="formUserEditEmail">Email</label>
          <input id="formUserEditEmail" type="email" ng-model="aVars.modifiedUser.email" />
        </div>
      </div>
      <div class="row">
        <div class="col s3">
        <label for="formUserEditPreferredLanguage">Preferred Language</label>
        <input id="formUserEditPreferredLanguage" type="text" ng-model="aVars.modifiedUser.preferredLanguage" />
        </div>
        <div class="offset-s3 col s6">
          <label for="formUserEditPassword">New Password</label>
          <input ng-class="[{invalid: aVars.modifiedUser.password.length < 7 && aVars.modifiedUser.password.length > 0}]"
            id="formUserEditPassword" type="password" ng-model="aVars.modifiedUser.password" />
        </div>
      </div>
      <div class="row">
        <span>Available Languages: </span>
        <span ng-repeat="(code, name) in aVars.availableLanguages">{{name}} ({{code}}), </span>
      </div>
    </form>

  </div>
  <div class="modal-footer">
    <button class="modal-action modal-close waves-effect waves-green btn-flat">Discard Changes</button>
    <button class="modal-action waves-effect waves-green btn-flat"
      ng-disabled="aVars.modifiedUser.password.length < 7 && aVars.modifiedUser.password.length > 0"
      ng-click="func.modifyUser();">Accept Changes</button>
  </div>
</div>


<div id="modal-form-login" class="modal">
  <div class="modal-content">
    <h4>Administrator Log In</h4>
      <form id="login-form" class="row mar-top modal-form" name="adminLoginForm">

          <div class="col s4 offset-s2">
            <label for="adminLoginFormEmailInput">Username or Email</label>
            <input type="email" ng-model="aVars.user.email" id="adminLoginFormEmailInput"/>
          </div>

          <div class="col s4">
            <label for="loginFormPasswordInput">Password</label>
            <input type="password" ng-model="aVars.user.password" id="loginFormPasswordInput"/>
          </div>

      </form>
  </div>
  <div class="modal-footer">
    <button class="modal-action modal-close waves-effect waves-green btn-flat">Cancel</button>
    <button class="modal-action modal-close waves-effect waves-green btn-flat" ng-click="func.adminLogin()">Log in</button>
  </div>
</div>
